#include <bits/stdc++.h>
using namespace std;

int bestCompressionLevel(vector<int>& arr, int target) {
    int low = 0, high = *max_element(arr.begin(), arr.end());
    int bestX = 0;
    long long bestDiff = LLONG_MAX;

    while (low <= high) {
        int mid = low + (high - low) / 2;
        long long sum = 0;

        for (int val : arr) {
            sum += min(val, mid);
        }

        long long diff = llabs(sum - target);

        // Update best answer
        if (diff < bestDiff || (diff == bestDiff && mid < bestX)) {
            bestDiff = diff;
            bestX = mid;
        }

        if (sum < target) {
            low = mid + 1;
        } else {
            high = mid - 1;
        }
    }

    return bestX;
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int T;
    cin >> T;
    while (T--) {
        int n, target;
        cin >> n >> target;

        vector<int> arr(n);
        for (int i = 0; i < n; i++) {
            cin >> arr[i];
        }

        cout << bestCompressionLevel(arr, target) << "\n";
    }
    return 0;
}
