#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int T;
    cin >> T;

    while (T--) {
        int n;
        long long k;
        cin >> n >> k;

        vector<long long> a(n);
        for (int i = 0; i < n; i++) {
            cin >> a[i];
        }

        unordered_map<long long, long long> freq;
        for (long long x : a) {
            freq[x]++;
        }

        long long pairs = 0;

        for (auto &it : freq) {
            long long x = it.first;
            long long y = k - x;

            if (freq[x] == 0) continue;

            if (x == y) {
                // Pair elements with themselves
                pairs += freq[x] / 2;
                freq[x] = 0;
            } else if (freq.count(y) && freq[y] > 0) {
                long long formed = min(freq[x], freq[y]);
                pairs += formed;
                freq[x] -= formed;
                freq[y] -= formed;
            }
        }

        cout << pairs << "\n";
    }

    return 0;
}
