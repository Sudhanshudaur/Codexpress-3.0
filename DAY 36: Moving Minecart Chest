#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int T;
    cin >> T;

    while (T--) {
        int n;
        cin >> n;

        vector<long long> emeralds(n);
        for (int i = 0; i < n; i++) {
            cin >> emeralds[i];
        }

        int k;
        cin >> k;

        long long windowSum = 0;

        // Sum of first k elements
        for (int i = 0; i < k; i++) {
            windowSum += emeralds[i];
        }

        long long maxSum = windowSum;

        // Slide the window
        for (int i = k; i < n; i++) {
            windowSum += emeralds[i];        // add next element
            windowSum -= emeralds[i - k];    // remove previous element
            maxSum = max(maxSum, windowSum);
        }

        cout << maxSum << "\n";
    }

    return 0;
}
