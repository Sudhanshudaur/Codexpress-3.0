#include <bits/stdc++.h>
using namespace std;

bool isPalindrome(const string &s, int l, int r) {
    while (l < r) {
        if (s[l] != s[r]) return false;
        l++;
        r--;
    }
    return true;
}

int main() {
    string s;
    cin >> s;

    int l = 0, r = s.size() - 1;

    while (l < r) {
        if (s[l] == s[r]) {
            l++;
            r--;
        } else {
            // Try removing one character
            cout << ((isPalindrome(s, l + 1, r) ||
                      isPalindrome(s, l, r - 1))
                     ? "true"
                     : "false");
            return 0;
        }
    }

    // Already palindrome
    cout << "true";
    return 0;
}
