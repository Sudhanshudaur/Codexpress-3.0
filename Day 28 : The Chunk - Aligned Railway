#include <bits/stdc++.h>
using namespace std;

int main() {
    int N, M;
    cin >> N >> M;

    vector<int> rails(N);
    for (int i = 0; i < N; i++) {
        cin >> rails[i];
    }

    unordered_map<int, int> firstIndex;
    long long prefixSum = 0;
    int maxLen = 0;

    for (int i = 0; i < N; i++) {
        prefixSum += rails[i];

        int mod = prefixSum % M;

        if (mod < 0)
            mod += M;

        if (mod == 0) {
            maxLen = i + 1;
        }

        if (firstIndex.find(mod) != firstIndex.end()) {
            maxLen = max(maxLen, i - firstIndex[mod]);
        } else {
            firstIndex[mod] = i;
        }
    }

    cout << maxLen << endl;

    return 0;
}
