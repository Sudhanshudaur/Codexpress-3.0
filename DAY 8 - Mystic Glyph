#include <bits/stdc++.h>
using namespace std;

int lengthOfLongestSubstring(string s) {
    vector<int> last(256, -1);
    int start = 0, maxLen = 0;

    for (int i = 0; i < s.length(); i++) {
        if (last[s[i]] >= start) {
            start = last[s[i]] + 1;
        }
        last[s[i]] = i;
        maxLen = max(maxLen, i - start + 1);
    }

    return maxLen;
}

int main() {
    string s;
    getline(cin, s);   // supports spaces & symbols

    cout << lengthOfLongestSubstring(s);
    return 0;
}
