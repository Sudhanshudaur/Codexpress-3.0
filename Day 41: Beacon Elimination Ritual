#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(NULL);

    int T;
    cin >> T;

    while (T--) {
        int n;
        cin >> n;

        int head = 1;
        int step = 1;
        int remaining = n;
        bool left = true;

        while (remaining > 1) {
            if (left || remaining % 2 == 1) {
                head += step;
            }

            step *= 2;
            remaining /= 2;
            left = !left;
        }

        cout << head << '\n';
    }

    return 0;
}
