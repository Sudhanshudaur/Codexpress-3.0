#include <bits/stdc++.h>
using namespace std;

int main() {
    int R, C;
    cin >> R >> C;

    int maxSum = INT_MIN;
    int rowIndex = 0;

    for (int i = 0; i < R; i++) {
        int currentSum = 0;
        for (int j = 0; j < C; j++) {
            int x;
            cin >> x;
            currentSum += x;
        }

        if (currentSum > maxSum) {
            maxSum = currentSum;
            rowIndex = i;
        }
    }

    cout << rowIndex << " " << maxSum << endl;
    return 0;
}
