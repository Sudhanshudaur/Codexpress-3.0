#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;

    while (t--) {
        int n;
        cin >> n;

        vector<int> lights(n);
        for (int i = 0; i < n; i++) {
            cin >> lights[i];
        }

        int k;
        cin >> k;

        int onesCount = 0;
        int result = -1;

        // Initial window
        for (int i = 0; i < k; i++) {
            onesCount += lights[i];
        }

        if (onesCount == k) {
            result = 0;
        } else {
            // Slide the window
            for (int i = k; i < n; i++) {
                onesCount += lights[i];
                onesCount -= lights[i - k];

                if (onesCount == k) {
                    result = i - k + 1;
                    break;
                }
            }
        }

        cout << result << "\n";
    }

    return 0;
}
